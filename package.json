{
  "name": "adonisjs-cqrs",
  "description": "",
  "version": "1.0.0",
  "engines": {
    "node": ">=20.6.0"
  },
  "type": "module",
  "files": [
    "build/src",
    "build/providers",
    "build/stubs",
    "build/index.d.ts",
    "build/index.js",
    "build/configure.d.ts",
    "build/configure.js"
  ],
  "exports": {
    ".": "./build/index.js",
    "./core": "./build/src/core/main.js",
    "./buses": "./build/src/buses/main.js",
    "./decorators": "./build/src/decorators/main.js",
    "./types": "./build/src/types/main.js",
    "./errors": "./build/src/errors/main.js",
    "./providers/cqrs_provider": "./build/providers/cqrs_provider.js",
    "./commands": "./build/commands/main.js"
  },
  "scripts": {
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "quick:test": "node --import=./tsnode.esm.js --enable-source-maps bin/test.ts",
    "pretest": "npm run lint",
    "test": "c8 npm run quick:test",
    "prebuild": "npm run lint && npm run clean",
    "postbuild": "npm run copy:templates",
    "release": "release-it",
    "version": "npm run build",
    "prepublishOnly": "npm run build",
    "index:commands": "adonis-kit index build/commands",
    "build": "npm run clean && tsup-node && npm run copy:templates && npm run index:commands"
  },
  "keywords": [
    "adonisjs",
    "cqrs",
    "event-sourcing",
    "ddd",
    "typescript"
  ],
  "author": "Walaff Fernandes <walaffonofre@icloud.com>",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/core": "^6.12.0",
    "@adonisjs/eslint-config": "2.0.0-beta.7",
    "@adonisjs/prettier-config": "^1.4.0",
    "@adonisjs/tsconfig": "^1.3.0",
    "@japa/assert": "^3.0.0",
    "@japa/expect-type": "^2.0.3",
    "@japa/file-system": "^2.3.2",
    "@japa/runner": "^3.1.4",
    "@swc/core": "1.13.19",
    "@types/node": "^20.14.5",
    "c8": "^10.1.2",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.1.0",
    "eslint": "^9.15.0",
    "np": "^10.0.6",
    "prettier": "^3.3.2",
    "reflect-metadata": "^0.2.2",
    "release-it": "^19.0.3",
    "rxjs": "^7.8.2",
    "ts-node-maintained": "^10.9.4",
    "tsup": "^8.5.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "glob": "^11.0.3",
    "picomatch": "^4.0.3"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.2.0",
    "rxjs": "^7.8.2"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "np": {
    "message": "chore(release): %s",
    "tag": "latest",
    "branch": "main",
    "anyBranch": false
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "tsup": {
    "entry": [
      "./index.ts",
      "./commands/**/*.ts",
      "./src/core/main.ts",
      "./src/decorators/main.ts",
      "./src/buses/main.ts",
      "./src/types/main.ts",
      "./src/errors/main.ts",
      "./providers/cqrs_provider.ts"
    ],
    "outDir": "./build",
    "clean": false,
    "format": "esm",
    "dts": true,
    "target": "esnext"
  },
  "prettier": "@adonisjs/prettier-config"
}
